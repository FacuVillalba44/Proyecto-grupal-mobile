<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondodegradado"
    android:onClick="form_registrar"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="48dp"
        android:contentDescription="@string/txt_descr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="451dp"

        android:layout_marginTop="100dp"
        android:background="@drawable/bordes_redondeados"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <TextView
            android:id="@+id/tv_iniciar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="@string/tv_iniciar"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/ediTextemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:autofillHints="emailAddress"
            android:backgroundTint="@color/color_bg_1"
            android:ems="15"
            android:hint="@string/txt_hint_email"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:textAlignment="textStart"
            android:textColorHint="@color/black"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/ediTextPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:autofillHints="password"
            android:backgroundTint="@color/color_bg_1"
            android:ems="15"
            android:hint="@string/txt_hint_pass"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textAlignment="textStart"
            android:textColorHint="@color/black"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/buttonInisioSesion"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/color_bg_1"
            android:gravity="center_horizontal"
            android:text="@string/txt_btn_login"
            android:textColor="@color/white"
            android:textSize="25sp"
            tools:layout_editor_absoluteX="163dp"
            tools:layout_editor_absoluteY="358dp" />


        <TextView
            android:id="@+id/tv_registrarse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:padding="10sp"
            android:text="@string/tv_nwuser"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonRegistrar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color_bg_1"
            android:onClick="form_registrar"
            android:text="@string/txt_btn_registrarse"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="normal"
            tools:layout_editor_absoluteX="163dp"
            tools:layout_editor_absoluteY="358dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>



